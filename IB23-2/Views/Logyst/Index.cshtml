            </td>
        </tr>
        <tr>
            <td>
                <select id="pos1" class="pos">
                    <option>красный</option>
                    <option>зелёный</option>
                    <option>синий</option>
                </select>
            </td>
            <td>
                <select id="pos2" class="pos">
                    <option>красный</option>
                    <option>зелёный</option>
                    <option>синий</option>
                </select>
            </td>
            <td>
                <select id="pos3" class="pos">
                    <option>красный</option>
                    <option>зелёный</option>
                    <option>синий</option>
                </select>
            </td>
            <td>
                <select id="pos4" class="pos">
                    <option>красный</option>
